<div class="section">
  <h3 data-bind="text: _('Plugin Template')"></h3>
  <p data-bind="text: _('Use this template as a starting point and replace settings with your own plugin options.')"></p>

  <div class="control-group">
    <label class="control-label" for="plugin_template_toggle" data-bind="text: _('Example toggle')"></label>
    <div class="controls">
      <label class="checkbox">
        <input
          id="plugin_template_toggle"
          type="checkbox"
          data-bind="checked: settings.settings.plugins.plugin_template.example_toggle"
        />
        <span data-bind="text: _('Enable example behavior')"></span>
      </label>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="plugin_template_text" data-bind="text: _('Example text')"></label>
    <div class="controls">
      <input
        id="plugin_template_text"
        type="text"
        class="input-block-level"
        data-bind="value: settings.settings.plugins.plugin_template.example_text"
      />
      <p class="help-block" data-bind="text: _('Replace with your own plugin configuration fields.')"></p>
    </div>
  </div>
</div>
