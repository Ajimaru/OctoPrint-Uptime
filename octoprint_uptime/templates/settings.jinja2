<div id="settings_plugin_octoprint_uptime" class="form-horizontal">
    <fieldset>
        <legend>{{ _("OctoPrint-Uptime") }}</legend>
        <p>{{ _("Display both system and OctoPrint uptime in the navbar, with optional compact toggling.") }}</p>
        <div id="uptime_note_container"
             data-note="{{ _('Uptime could not be determined on this system.') |e }}"
             style="display:none;
                    margin-bottom:10px"></div>
        <script type="text/javascript">
      (function() {
        $(function() {
          var $uptimeContainer = $('#settings_plugin_octoprint_uptime');
          var uptimeNoteRendered = false;
          // Guard for an in-flight API request to avoid duplicate calls when
          // the settings view/modal is opened multiple times.
          var uptimeNotePromise = null;

          function _renderUptimeNote(data) {
            try {
              if (data && data.uptime_available === false) {
                var installNote = data.uptime_note || $('#uptime_note_container').attr('data-note') || '';
                var el = $('<div />')
                  .addClass('alert alert-warning')
                  .text(installNote);
                $('#uptime_note_container').empty().append(el).show();
              }
            } catch (e) {
              if (typeof window.UptimeDebug !== 'undefined' && window.UptimeDebug) {
                console.error('octoprint_uptime: error handling uptime API response in settings template', e, data);
              } else {
                console.warn('octoprint_uptime: error handling uptime API response in settings template');
              }
            }
          }

          function _fetchUptimeNote() {
            if (uptimeNoteRendered) {
              return $.Deferred().resolve().promise();
            }
            if (uptimeNotePromise) {
              return uptimeNotePromise;
            }

            uptimeNotePromise = OctoPrint.simpleApiGet('octoprint_uptime', {timeout: 10000})
              .done(function(data) {
                _renderUptimeNote(data);
                uptimeNoteRendered = true;
                // clear the in-flight promise now that we completed
                uptimeNotePromise = null;
              })
              .fail(function(jqXHR, textStatus, errorThrown) {
                // clear the in-flight promise so callers can retry later
                uptimeNotePromise = null;
                if (typeof window.UptimeDebug !== 'undefined' && window.UptimeDebug) {
                  console.error('octoprint_uptime: failed to fetch uptime API for settings template', textStatus, errorThrown, jqXHR);
                } else {
                  console.warn('octoprint_uptime: failed to fetch uptime API for settings template:', textStatus);
                }
              });

            return uptimeNotePromise;
          }

          // Prefer waiting for an enclosing modal to be shown. If the settings
          // section is inside a modal, attach a one-time shown handler so we
          // only fetch when the modal becomes visible; otherwise fetch now.
          var $modal = $uptimeContainer.closest('.modal');
          if ($modal.length) {
            $modal.on('shown.bs.modal shown', function _uptimeModalHandler() {
              $modal.off('shown.bs.modal shown', _uptimeModalHandler);
              _fetchUptimeNote();
            });
          } else {
            _fetchUptimeNote();
          }
        });
      })();
        </script>
        <div class="control-group">
            <label class="control-label" for="plugin_uptime_navbar">{{ _("Navbar") }}</label>
            <div class="controls">
                <label class="checkbox" for="plugin_uptime_navbar">
                    <input id="plugin_uptime_navbar"
                           type="checkbox"
                           data-bind="checked: settings.plugins.octoprint_uptime.navbar_enabled" />
                    {{ _("Show uptime in navbar") }}
                </label>
                <p class="help-block">{{ _("Enable the navbar entry so the other uptime options can be shown.") }}</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="plugin_uptime_show_system">{{ _("System Uptime") }}</label>
            <div class="controls">
                <label class="checkbox" for="plugin_uptime_show_system">
                    <input id="plugin_uptime_show_system"
                           type="checkbox"
                           data-bind="checked: settings.plugins.octoprint_uptime.show_system_uptime, enable: settings.plugins.octoprint_uptime.navbar_enabled" />
                    {{ _("Show system uptime in navbar") }}
                </label>
                <p class="help-block">{{ _("When enabled, displays the system uptime in the navbar.") }}</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="plugin_uptime_show_octoprint">{{ _("OctoPrint Uptime") }}</label>
            <div class="controls">
                <label class="checkbox" for="plugin_uptime_show_octoprint">
                    <input id="plugin_uptime_show_octoprint"
                           type="checkbox"
                           data-bind="checked: settings.plugins.octoprint_uptime.show_octoprint_uptime, enable: settings.plugins.octoprint_uptime.navbar_enabled" />
                    {{ _("Show OctoPrint uptime") }}
                </label>
                <p class="help-block">{{ _("When enabled, displays the OctoPrint process uptime in the navbar.") }}</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="plugin_uptime_compact">{{ _("Compact Display") }}</label>
            <div class="controls">
                <label class="checkbox" for="plugin_uptime_compact">
                    <input id="plugin_uptime_compact"
                           type="checkbox"
                           data-bind="checked: settings.plugins.octoprint_uptime.compact_display, enable: settings.plugins.octoprint_uptime.navbar_enabled() && (settings.plugins.octoprint_uptime.show_system_uptime() && settings.plugins.octoprint_uptime.show_octoprint_uptime())" />
                    {{ _("Toggle between system and OctoPrint uptime every 5 seconds") }}
                </label>
                <p class="help-block">
                    {{ _("When enabled and both uptimes are displayed, alternately show system and OctoPrint uptime to save navbar space.") }}
                </p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="plugin_uptime_format">{{ _("Display format") }}</label>
            <div class="controls">
                <select id="plugin_uptime_format"
                        data-bind="value: settings.plugins.octoprint_uptime.display_format"
                        class="span3">
                    <option value="full">{{ _("D + H + M + S (days + hours + minutes + seconds)") }}</option>
                    <option value="dhm">{{ _("D + H + M (days + hours + minutes)") }}</option>
                    <option value="dh">{{ _("D + H (days + hours)") }}</option>
                    <option value="d">{{ _("D (days only)") }}</option>
                </select>
                <p class="help-block">{{ _("Choose how the uptime is shown in the navbar.") }}</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="plugin_uptime_poll_interval">{{ _("Polling interval (s)") }}</label>
            <div class="controls">
                <input id="plugin_uptime_poll_interval"
                       type="number"
                       class="span2"
                       min="1"
                       data-bind="value: settings.plugins.octoprint_uptime.poll_interval_seconds" />
                <p class="help-block">{{ _("Seconds between navbar API polls. Low values may spam logs; default is 5s.") }}</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="plugin_uptime_debug">{{ _("Debug") }}</label>
            <div class="controls">
                <label class="checkbox" for="plugin_uptime_debug">
                    <input id="plugin_uptime_debug"
                           type="checkbox"
                           data-bind="checked: settings.plugins.octoprint_uptime.debug" />
                    {{ _("Enable debug logging (throttled)") }}
                </label>
                <p class="help-block">
                    {{ _("When enabled, the plugin will log debug messages. Messages are throttled to avoid spamming the log.") }}
                </p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="plugin_uptime_throttle">{{ _("Debug throttle (s)") }}</label>
            <div class="controls">
                <input id="plugin_uptime_throttle"
                       type="number"
                       class="span2"
                       min="1"
                       data-bind="value: settings.plugins.octoprint_uptime.debug_throttle_seconds" />
                <p class="help-block">{{ _("Minimum seconds between debug log entries.") }}</p>
            </div>
        </div>
    </fieldset>
</div>
